    <div class="post-heading">
        <div class="post-heading__wrapper">
            <p class="post-heading__subtitle">{{ post.date.toLocaleDateString(
                "en-US", {year: 'numeric', month: 'long', day: 'numeric'}) }}</p>
            <h2 class="post-heading__title"><a href="{{post.url}}">{{post.data.title}}</a></h2>
            <p>
            {%- for tag in post.data.tags -%}
                <a href="/posts/{{ tag }}" class="post-heading__tag">{{ tag }}</a>
            {%- endfor -%}
            </p>
        </div>
    </div>
    <div class="post-content">
        <div class="post-content__wrapper">
            <p>{{post.data.excerpt | safe }}</p>
        </div>
    </div>